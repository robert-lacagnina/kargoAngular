<% include header %>

  <h1>Angular!</h1>
    <div ng-controller="PostCtrl">
      <table>
        <tbody>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Body</th>
        </tr>
        <tr ng-repeat="post in posts">
          <td>{{post.id}}</td>
          <td>{{post.title}}</td>
          <td>{{post.body}}</td>
        </tr>
        </tbody>
      </table>
    </div>

<% include footer %>